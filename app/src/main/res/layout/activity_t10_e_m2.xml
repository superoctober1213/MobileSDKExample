<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.T10EM2Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/T10EM2_tv"
            android:layout_width="match_parent"
            android:layout_height="100dp" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:id="@+id/t10em2_open_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="打开端口"
                    android:textSize="22dp" />
                <Button
                    android:id="@+id/t10em2_checkCard_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="检测卡位置状态"
                    android:textSize="22dp" />

                <Button
                    android:id="@+id/t10em2_reset_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="复位设备"
                    android:textSize="22dp" />
                <Button
                    android:id="@+id/t10em2_enter_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="进卡"
                    android:textSize="22dp" />

                <Button
                    android:id="@+id/t10em2_pop_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="弹卡"
                    android:textSize="22dp" />

                <Button
                    android:id="@+id/t10em2_move_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="移动卡片"
                    android:textSize="22dp" />

                <Button
                    android:id="@+id/t10em2_state_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="传感器状态"
                    android:textSize="22dp" />
                <Button
                    android:id="@+id/t10em2_cardType_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="卡类型"
                    android:textSize="22dp" />

                <Button
                    android:id="@+id/t10em2_popMode_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="设置弹卡模式"
                    android:textSize="22dp" />

                <Button
                    android:id="@+id/t10em2_enterMode_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="设置前端进卡模式"
                    android:textSize="22dp" />

                <Button
                    android:id="@+id/t10em2_enterEndMode_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="设置后端进卡模式"
                    android:textSize="22dp" />
                <Button
                    android:id="@+id/t10em2_stop_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="设置停卡位置"
                    android:textSize="22dp" />



            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>